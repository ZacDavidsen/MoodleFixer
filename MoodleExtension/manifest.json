{
  "manifest_version": 2,
  "name": "Moodle fixer",
  "version": "1.0",
  
  "description": "Provides an interface to filter the navigation tab in Moodle",
  
  //consider changing this to a page action
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  
  "background": {
    "scripts": ["background.js"],
	"persistent": false
  },
  
  "permissions": [
    "storage",
	"declarativeContent"
  ],
  
  "content_scripts": [
  {
	"matches": ["https://moodle.rose-hulman.edu/*"],
	"js": ["script.js"]
  }
  ]
}